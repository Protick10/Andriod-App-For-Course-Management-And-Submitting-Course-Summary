<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="SignupLoginActivity"
    android:orientation="vertical"
    android:background="#ffff00">
    <TextView
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Signup"
        android:textSize="24sp"
        android:gravity="center"
        android:textStyle="bold"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#eeeeee"
        android:layout_margin="8dp"
        android:padding="12dp">

        <TableRow
            android:id="@+id/signupName">
            <TextView
                android:text="Name :"
                android:textSize="16sp"
                android:layout_marginRight="12dp"
                android:textStyle="bold"/>
<!--            <TextView-->
<!--                android:text=":"-->
<!--                android:textSize="16dp"-->
<!--                android:paddingLeft="8dp"-->
<!--                android:paddingRight="8dp"/>-->
            <EditText
                android:id="@+id/signupEtName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="text"/>
        </TableRow>

        <TableRow
            android:id="@+id/signupEmail">
            <TextView
                android:text="Email :"
                android:textSize="16sp"
                android:layout_marginRight="12dp"
                android:textStyle="bold"/>
<!--            <TextView-->
<!--                android:text=":"-->
<!--                android:textSize="16dp"-->
<!--                android:paddingLeft="8dp"-->
<!--                android:paddingRight="8dp"/>-->
            <EditText
                android:id="@+id/signupEtEmail"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="textEmailAddress"/>
        </TableRow>

        <TableRow
            android:id="@+id/signupPhone">
            <TextView
                android:text="Phone :"
                android:textSize="16sp"
                android:layout_marginRight="12dp"
                android:textStyle="bold"/>
<!--            <TextView-->
<!--                android:text=":"-->
<!--                android:textSize="16dp"-->
<!--                android:paddingLeft="8dp"-->
<!--                android:paddingRight="8dp"/>-->

            <EditText
                android:id="@+id/signupEtPhone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="phone"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="User ID :"
                android:textSize="16sp"
                android:layout_marginRight="12dp"
                android:textStyle="bold"/>
<!--            <TextView-->
<!--                android:text=":"-->
<!--                android:textSize="16dp"-->
<!--                android:paddingLeft="8dp"-->
<!--                android:paddingRight="8dp"/>-->
            <EditText
                android:id="@+id/signupEtUserId"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="text"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Password :"
                android:textSize="16sp"
                android:layout_marginRight="12dp"
                android:textStyle="bold"/>
<!--            <TextView-->
<!--                android:text=":"-->
<!--                android:textSize="16dp"-->
<!--                android:paddingLeft="8dp"-->
<!--                android:paddingRight="8dp"/>-->
            <EditText
                android:id="@+id/signupEtPassword"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="numberPassword"/>
        </TableRow>

        <TableRow
            android:id="@+id/signupRePass">
            <TextView
                android:text="Re-Password :"
                android:textSize="16sp"
                android:layout_marginRight="12dp"
                android:textStyle="bold"/>
<!--            <TextView-->
<!--                android:text=":"-->
<!--                android:textSize="16dp"-->
<!--                android:paddingLeft="8dp"-->
<!--                android:paddingRight="8dp"/>-->
            <EditText
                android:id="@+id/signupEtRePassword"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="numberPassword"/>
        </TableRow>

        <CheckBox
            android:id="@+id/chkRemUserdId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remember User ID"/>
        <CheckBox
            android:id="@+id/chkRemPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remember Password"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/loginToggleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:layout_marginRight="12dp"/>

            <TextView
                android:id="@+id/loginLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="Login"
                android:textColor="#0000bb"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </TableLayout>

    <!--    bottom panel-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnExit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Exit"
            android:backgroundTint="#ffff00"
            android:textColor="#000000"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/btnGo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Go"
            android:backgroundTint="#ffff00"
            android:textColor="#000000"
            android:layout_margin="1dp"/>
    </LinearLayout>

</LinearLayout>